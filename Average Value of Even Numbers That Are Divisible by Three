class Solution {
    public int averageValue(int[] nums) {
        int s = 0;
        int n = 0;
        int r = 0;
        for(int i : nums){
            if(i % 3 == 0 && i % 2 == 0){
                s += i;
                n++;
            }
        }
        
        if(n == 0)
        return 0;
        r = s/n;
        return r;
        
    }
}
